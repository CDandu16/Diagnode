<body class = "body">
  <h2 class = "header2">Forgot your password?</h2>

  <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs vcenter">
      <%= f.input :email, required: true, autofocus: true %>
    </div>

    <div class="form-actions text-center padding">
      <%= f.button :submit, "Send me reset password instructions", :class => "btn btn-success btn-lg" %>
    </div>
  <% end %>
  <div class = "text-center">
  <%= render "devise/shared/links" %>
  </div>
</body>
