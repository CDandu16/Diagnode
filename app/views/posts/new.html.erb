<script type="text/javascript">
jQuery(document).ready(function() {
  jQuery(".content").hide();
  //toggle the componenet with class msg_body
  jQuery(".heading").click(function()
  {
    jQuery(this).next(".content").slideToggle(500);
  });
});
</script>
<script type = "text/javascript">
jQuery(document).ready(function() {
  jQuery(".hidden1").hide();
  var counter = 2;
  document.getElementById('newmodule').addEventListener('click', function() {
      if(counter<14){
      var div = "id" + counter;
      $("#" + div).show();
      counter++;
      }
      if(counter == 14){
        $('#newmodule').hide();
      }
  }, false);
});
</script>

<body>
  <div class = "vcenter">
  <%= simple_form_for @post, url: posts_path, as: 'post' do |f| %>
       <%= f.input :title, placeholder: 'Enter title of case'%>
       <%= f.hidden_field :name, :value => current_user.email%>


   <div class = "padding text-center">
      <input type=button value="new module" id = "newmodule" class = "btn btn-lg"> </input>
    </div>

       <div class = "text-center padding">
        <%= f.button :submit, "submit", :class => "btn btn-success btn-lg" %>
       </div>
    <% end %>
    <%= link_to 'posts', posts_path %>
  </div>
</body>
